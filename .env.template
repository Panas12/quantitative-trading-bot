# Trading Bot Environment Variables

# ===== CAPITAL.COM API CREDENTIALS =====
CAPITAL_API_KEY=your_api_key_here
CAPITAL_API_PASSWORD=your_api_password_here
CAPITAL_EMAIL=your@email.com
CAPITAL_ENVIRONMENT=LIVE  # or DEMO

# ===== TRADING CONFIGURATION =====
TRADING_CAPITAL=111.55
DRY_RUN=True  # Set to False for live trading (DANGEROUS!)

# ===== AUTOMATION & ALERTS =====
EMAIL_ALERTS=False  # Set to True to enable email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your@gmail.com
SENDER_PASSWORD=your_app_password  # Use Gmail App Password, not account password
RECIPIENT_EMAIL=alerts@email.com

# ===== ADVANCED OPTIONS =====
AUTO_EXECUTE=False  # Set to True for fully automated trading (VERY DANGEROUS!)
RISK_LIMIT_DRAWDOWN=0.20  # 20% max drawdown
RISK_LIMIT_LEVERAGE=2.0  # 2x max leverage

# ===== LOGGING =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
